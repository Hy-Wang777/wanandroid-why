<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standardBlack">


    <TextView
        android:id="@+id/tv_splash_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wanandroid"
        android:textColor="@color/standardWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="- by Why"
        android:textColor="@color/standardWhite"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/tv_splash_content"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/pic_splash"
        app:layout_constraintBottom_toTopOf="@id/tv_splash_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>