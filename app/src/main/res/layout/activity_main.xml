<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standardWhite">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp2_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/radio_main_tab"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/radio_main_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/standardWhite"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            android:id="@+id/rb_main_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_home_selector"
            android:drawablePadding="2dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="5dp"
            android:text="首页"
            android:textColor="@drawable/main_text_color_selector"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_main_tab_square"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:button="@null"
            android:drawableTop="@drawable/tab_square_selector"
            android:drawablePadding="2dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="5dp"
            android:text="广场"
            android:textColor="@drawable/main_text_color_selector"
            android:textSize="10sp" />


        <RadioButton
            android:id="@+id/rb_main_tab_system"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:button="@null"
            android:drawableTop="@drawable/tab_system_selector"
            android:drawablePadding="2dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="5dp"
            android:text="体系"
            android:textColor="@drawable/main_text_color_selector"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_main_tab_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:button="@null"
            android:drawableTop="@drawable/tab_mine_selector"
            android:drawablePadding="2dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="5dp"
            android:text="我的"
            android:textColor="@drawable/main_text_color_selector"
            android:textSize="10sp" />

    </RadioGroup>


    <FrameLayout
        android:id="@+id/frame_layout_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>